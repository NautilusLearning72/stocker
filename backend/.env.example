# Application Configuration
APP_NAME=Stocker
APP_VERSION=0.1.0
ENVIRONMENT=local
LOG_LEVEL=INFO
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://stocker:dev@localhost:5432/stocker

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TIMEZONE=America/New_York

# Trading Configuration
TRADING_UNIVERSE=["SPY","TLT","GLD","DBC","UUP"]

# Market Data Providers
POLYGON_API_KEY=your_polygon_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
USE_YFINANCE_FALLBACK=true

# Broker (Paper Trading by default)
BROKER_MODE=paper
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring & Alerts
SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=
ALERT_EMAIL=

# CORS
CORS_ORIGINS=["http://localhost:4200","http://localhost:8000"]
