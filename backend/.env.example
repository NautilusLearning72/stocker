# Application Configuration
APP_NAME=Stocker
APP_VERSION=0.1.0
ENVIRONMENT=local
LOG_LEVEL=INFO
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://stocker:dev@localhost:5432/stocker

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TIMEZONE=America/New_York

# Trading Configuration
TRADING_UNIVERSE=["SPY","TLT","GLD","DBC","UUP"]
DEFAULT_STRATEGY_ID=main_strategy
USE_DYNAMIC_UNIVERSE=false
ORDER_EXECUTION_TYPE=auto
OPG_WINDOW_START_HOUR=19
OPG_WINDOW_START_MINUTE=0
OPG_WINDOW_END_HOUR=9
OPG_WINDOW_END_MINUTE=28
EXTENDED_HOURS_LIMIT_BPS=10.0
UNIVERSE_SIZE=250
UNIVERSE_LOOKBACK_DAYS=20
UNIVERSE_SOURCE=alpaca_most_actives
UNIVERSE_SCREENER_BY=volume
UNIVERSE_SCREENER_MAX=100
UNIVERSE_REFRESH_HOUR=18
UNIVERSE_REFRESH_MINUTE=0

# Market Data Providers
POLYGON_API_KEY=your_polygon_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
USE_YFINANCE_FALLBACK=true
FUNDAMENTALS_PROVIDER=yfinance
FUNDAMENTALS_REFRESH_HOUR=19
FUNDAMENTALS_REFRESH_MINUTE=0
FUNDAMENTALS_MAX_RETRIES=3
FUNDAMENTALS_RETRY_BACKOFF_SEC=1.0

# Corporate Actions Provider
CORP_ACTIONS_PROVIDER=yfinance
CORP_ACTIONS_LOOKBACK_DAYS=90
CORP_ACTIONS_REFRESH_DAY=0
CORP_ACTIONS_REFRESH_HOUR=21
CORP_ACTIONS_REFRESH_MINUTE=0
CORP_ACTIONS_MAX_RETRIES=3
CORP_ACTIONS_RETRY_BACKOFF_SEC=1.0

# Sentiment Data Provider
SENTIMENT_PROVIDER=gdelt
SENTIMENT_PERIOD=WEEKLY
SENTIMENT_LOOKBACK_DAYS=7
SENTIMENT_REFRESH_DAY=0
SENTIMENT_REFRESH_HOUR=20
SENTIMENT_REFRESH_MINUTE=0
SENTIMENT_ONLY_MISSING=true
SENTIMENT_MAX_RETRIES=3
SENTIMENT_RETRY_BACKOFF_SEC=1.0
SENTIMENT_REQUEST_TIMEOUT_SEC=10.0
SENTIMENT_REQUEST_DELAY_SEC=0.2
SENTIMENT_MAX_CONCURRENCY=4
SENTIMENT_RATE_LIMIT_PER_SEC=2.0
SENTIMENT_MAX_SYMBOLS=0

# Derived Metrics
DERIVED_METRICS_LOOKBACK_DAYS=300
DERIVED_METRICS_SENTIMENT_LOOKBACK_DAYS=90
DERIVED_METRICS_USE_GLOBAL_UNIVERSE=true
DERIVED_METRICS_CALC_VERSION=v1

# Broker (Paper Trading by default)
BROKER_MODE=paper
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring & Alerts
SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=
ALERT_EMAIL=
HEALTH_CONSUMER_WARN_SEC=300
HEALTH_CONSUMER_ERROR_SEC=900

# Portfolio Sync
PORTFOLIO_SYNC_LOOKBACK_DAYS=30
PORTFOLIO_SYNC_ORDER_LIMIT=500

# CORS
CORS_ORIGINS=["http://localhost:4200","http://localhost:8000"]
